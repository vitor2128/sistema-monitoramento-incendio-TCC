{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"rootDir": "./",
		"baseUrl": "./src",
		"outDir": "./dist",
		"typeRoots": ["@Types", "./node_modules/@Types"],
		"paths": {
			"@api/*": ["api/*"],
			"@config/*": ["config/*"],
			"@domain/*": ["domain/*"],
			"@infra/*": ["infra/*"],
			"@modules/*": ["modules/*"],
			"@service/*": ["service/*"],
			"@shared/*": ["shared/*"],
			"@errors/*": ["shared/errors/*"],
			"@middleware/*": ["shared/infra/http/middleware/*"],
			"@utils/*": ["utils/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}
